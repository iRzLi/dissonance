<!DOCTYPE html>
<html>
  <head>
    <title>Dissonance</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700&display=swap" rel="stylesheet">
    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser = <%= render(
          "api/users/user.json.jbuilder",
          user: current_user
        ).html_safe %>
      </script>
    <% end %>

    <script type="text/javascript">
      window.picture_bomb = "<%= image_url("bomb.svg") %>"
      window.picture_box = "<%= image_url("box.svg") %>"
      window.picture_circle = "<%= image_url("circle.svg") %>"
      window.picture_coin = "<%= image_url("coin.svg") %>"
      window.picture_computer = "<%= image_url("computer.svg") %>"
      window.picture_controller = "<%= image_url("controller.svg") %>"
      window.picture_disk = "<%= image_url("disk.svg") %>"
      window.picture_floppy_disk = "<%= image_url("floppy_disk.svg") %>"
      window.picture_headset = "<%= image_url("headset.svg") %>"
      window.picture_laptop = "<%= image_url("laptop.svg") %>"
      window.picture_open_circle = "<%= image_url("open_circle.svg") %>"
      window.picture_open_square = "<%= image_url("open_square.svg") %>"
      window.picture_open_triangle = "<%= image_url("open_triangle.svg") %>"
      window.picture_phone_1 = "<%= image_url("phone_1.svg") %>"
      window.picture_phone_2 = "<%= image_url("phone_2.svg") %>"
      window.picture_potion = "<%= image_url("potion.svg") %>"
      window.picture_x_cross = "<%= image_url("x_cross.svg") %>"
      window.profile_picture = "<%= image_url("profile_picture.jpg") %>"
    </script>

    

    <%= favicon_link_tag image_url('favi.png') %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
